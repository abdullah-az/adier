# Application Settings
APP_NAME="Quiz System Backend"
APP_VERSION="0.1.0"
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_VISION_MODEL=gpt-4o-mini
OPENAI_TEXT_MODEL=gpt-4o-mini
OPENAI_TRANSCRIPTION_MODEL=gpt-4o-mini-transcribe

# Google Gemini Configuration
GEMINI_API_KEY=
GEMINI_VISION_MODEL=gemini-1.5-flash
GEMINI_TEXT_MODEL=gemini-1.5-pro

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Groq Configuration
GROQ_API_KEY=
GROQ_WHISPER_MODEL=whisper-large-v3

# AI Orchestration
AI_PROVIDER_PRIORITY=openai,gemini,claude,groq,local
AI_COST_CURRENCY=USD
AI_RATE_LIMIT_PER_MINUTE=60

# Storage Configuration
STORAGE_PATH=./storage
UPLOAD_MAX_SIZE=104857600  # 100MB in bytes

# Video Processing
FFMPEG_THREADS=2
VIDEO_OUTPUT_FORMAT=mp4

# Database Configuration
DATABASE_URL=mysql://user:password@localhost:3306/quiz_system

# Worker Configuration
WORKER_CONCURRENCY=4
MAX_QUEUE_SIZE=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
