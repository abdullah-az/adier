# Application Settings
APP_NAME="Quiz System Backend"
APP_VERSION="0.1.0"
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_WHISPER_MODEL=gpt-4o-mini-transcribe
OPENAI_SCENE_MODEL=gpt-4o-mini
OPENAI_REQUEST_TIMEOUT=120
OPENAI_MAX_RETRIES=3
OPENAI_RETRY_BACKOFF=2.0

# Transcription Pipeline
TRANSCRIPTION_CHUNK_DURATION=600
TRANSCRIPTION_CHUNK_OVERLAP=1.0
TRANSCRIPTION_AUDIO_FORMAT=wav
TRANSCRIPTION_SAMPLE_RATE=16000
TRANSCRIPTION_CHANNELS=1
WHISPER_CPP_PATH=/usr/local/bin/whisper
WHISPER_CPP_MODEL=base.en

# Scene Detection
SCENE_MAX_SCENES=5
SCENE_TEMPERATURE=0.2
SCENE_TRANSCRIPT_CHAR_LIMIT=12000
SCENE_MIN_CONFIDENCE=0.35
AI_PROMPTS_PATH=./storage/metadata/ai_prompts.json

# Storage Configuration
STORAGE_PATH=./storage
UPLOAD_MAX_SIZE=104857600  # 100MB in bytes

# Video Processing
FFMPEG_THREADS=2
VIDEO_OUTPUT_FORMAT=mp4

# Database Configuration
DATABASE_URL=mysql://user:password@localhost:3306/quiz_system

# Worker Configuration
WORKER_CONCURRENCY=4
MAX_QUEUE_SIZE=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
