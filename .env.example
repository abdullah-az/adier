# === API Keys ===
# OpenAI API key for text and video processing models
OPENAI_API_KEY=

# Google Gemini API key for multimodal generation
GEMINI_API_KEY=

# Anthropic Claude API key for advanced summarisation tasks
ANTHROPIC_API_KEY=

# Groq API key for accelerated inference
GROQ_API_KEY=

# === Paths & Storage ===
# Absolute path to the root directory where all media assets will be stored
STORAGE_ROOT=/var/app/storage

# Database connection string (e.g. postgres://user:password@localhost:5432/ai_video_editor)
DATABASE_URL=

# === Application Settings ===
# Enable verbose debug logging (true/false)
DEBUG=false

# Logging level for the application (e.g. DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum allowed upload size in bytes (e.g. 536870912 for 512MB)
MAX_UPLOAD_SIZE=536870912
